{
    "name": "<%= templateConfig.name %>",
    "private": true,
    "description": "<%= `Design System for ${templateConfig.name}` %>",
    "workspaces": {
        "packages": [
        "packages/components",
        "packages/components/src/*",
        "<%- documentationProvider === 'docz' ? 'packages/portal/.docz",' : 'packages/portal"' %>
        <%- documentationProvider === 'docz' ? '"packages/portal"' : '' %>
        ]
    },
    "scripts": {
        "husky": {
            "hooks": {
                "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --config ./commitlint.config.js",
                "pre-commit": "lerna run pre-commit --since"
            }
        }
    },
    "dependencies": {
        "scheduler": "0.14.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@commitlint/config-lerna-scopes": "^7.5.1",
        "cross-var": "^1.1.0",
        "husky": "^1.3.1",
        "lerna": "^3.10.7",
        "make-dir-cli": "2.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.17.0"
    }
}
