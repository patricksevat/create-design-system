{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "scripthost", "es2015.promise", "es2015.generator", "es2015.iterable", "dom"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": false,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
